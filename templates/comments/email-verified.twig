{% extends 'layouts.master' %}

{% block content %}
    <div class="email-verification">
        <h1 style="font-size: 18px;">Email Verified</h1>
        <div class="ev-data">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
            <span>{{ email.name }}</span>
        </div>
        <div class="ev-data ev-data-mail">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
            </svg>

            <span>{{ email.email }}</span>
        </div>
        <p class="ev-message">
            You can now comment on posts. Your verification will eventually expire and it only applies to the current browser.
        </p>
        <a href="/{{ email.entryUri }}" class="ev-button">Return to Article</a>
    </div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script>
        if (typeof(Storage) !== "undefined") {
            localStorage.setItem('commentToken', '{{ email.token }}');
            localStorage.setItem('commentName', '{{ email.name }}');
        }
    </script>
{% endblock %}